<Window x:Class="Hijacker.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hijacker"
        mc:Ignorable="d"
        Title="FeedbackWindow" Height="40" SizeToContent="WidthAndHeight"
				WindowStyle="None" WindowState="Normal" ShowInTaskbar="False"
				ResizeMode="NoResize"

				FontSize="16">
	<Border BorderThickness="2" BorderBrush="Navy" Padding="4">
		<Grid Name="grid">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto" MinWidth="50"/>
			</Grid.ColumnDefinitions>
			<TextBlock Text="Current Target: "/>
			<TextBlock Name="target" Grid.Column="1" Foreground="Red" FontWeight="Bold"/>
		</Grid>
	</Border>
</Window>

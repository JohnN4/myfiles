<Window x:Class="AutomationClient.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomationClient.WPF"
        mc:Ignorable="d"
        Title="WPF Automation Client" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBox Grid.Row="0" AcceptsReturn="True" Name="output"/>
		<Border Grid.Row="1" BorderBrush="Navy" BorderThickness="1" Height="50">
			<TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" FontSize="18" Name="status"
								 Text="Waiting for Messages"/>
		</Border>
	</Grid>
</Window>
